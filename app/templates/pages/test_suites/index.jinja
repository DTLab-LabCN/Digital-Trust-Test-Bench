{% extends 'layouts/base_min.jinja' %}
{% block page %}
<div class="page-header d-print-none mb-3">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <div class="page-pretitle mb-1">
                    <ol class="breadcrumb" aria-label="breadcrumbs">
                        <li class="breadcrumb-item" aria-current="page"><a
                                href="{{ url_for('main.index') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><a href="#">Test-Suites</a></li>
                    </ol>
                </div>
                <h2 class="page-title">Test Suites</h2>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="container">
        <div class="row row-cards">
            <div class="col-md-6">
                <a href="{{ url_for('test_suites.data_model') }}" class="card mb-3">

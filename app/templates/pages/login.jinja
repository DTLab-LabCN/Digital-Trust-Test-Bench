{#  ------------
Template for github_login Login form on a page 
For now - this form has no fields - just an action button
--------------- #}

{% extends 'layouts/base_auth.jinja' %}

{% block page %}
<div class="container container-tight py-4">
    <div class="text-center mb-4">
        <a href="#" class="navbar-brand navbar-brand-autodark"><img
                src="{{ url_for('static', filename='logo-bil-H.png') }}" width="420" alt=""></a>
    </div>
    <h2 class="h2 text-center mb-4">Login</h2>
    <a href="{{ url_for('auth.github_login') }}" class="btn btn-secondary w-100 mb-3">
        <i class="icon bi bi-github"></i> with GitHub
    </a>
    {# <a href="#" class="btn w-100 mb-3" data-bs-toggle="modal" data-bs-target="#modal-qr">
                <i class="icon bi bi-qr-code"></i> with VC
            </a> #}
    {% with messages = get_flashed_messages() %}
    {% if messages %}
    {% for message in messages %}
    <div class="alert alert-danger" role="alert">
        <div class="d-flex">
            <div>
                <h4 class="alert-title">{{ message['title'] }}</h4>
                <div class="text-secondary">{{ message['message'] }}</div>
            </div>
        </div>
    </div>
    {% endfor %}
    {% endif %}
    {% endwith %}
</div>
{# <div class="text-center text-muted mt-3">
    Don't have account yet? <a href="#" tabindex="-1">Sign up</a>
</div> #}

<div class="modal modal-blur fade" id="modal-qr" tabindex="-1" style="display: none;" aria-hidden="true"
    style="display: block;">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Present</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img class="rounded mb-3"
                    src="{{ qrcode(session['invitation'], error_correction='H', icon_img='https://www.idlab.org/wp-content/themes/idlab/favicon.png') }}">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Login</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
            </div>
            <div class="modal-body text-center">
            </div>
            <div class="modal-footer">
                <a type="button" href="{{url_for('auth.vc_login')}}" class="btn btn-primary">Login</a>
            </div>
        </div> #}
    </div>
</div>
{% endblock %}
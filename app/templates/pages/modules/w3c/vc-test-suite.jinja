{% extends 'layouts/base.jinja' %}
{% block page %}
<div class="page-wrapper">
    <div class="page-header d-print-none mb-5">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <div class="page-pretitle mb-1">
                        <ol class="breadcrumb" aria-label="breadcrumbs">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">VC-Test-Suite</li>
                        </ol>
                    </div>
                    <h2 class="page-title">VC Test Suite</h2>
                </div>
                <!-- Page title actions -->
                <div class="col-auto ms-auto d-print-none">
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="container-xl d-flex flex-column justify-content-center">
            <form method="post">
                <div class="row row-cards">
                    {{ form.hidden_tag() }}
                    <div class="col-md-2 col-lg-2"></div>
                    <div class="col-md-8 col-lg-8">
                            <div class="card-body">
                                <div class="mb-3">
                                    {{ form.vc_file(class="form-control") }}
                                    {# <div class="form-label">Upload JSON-LD File</div> #}
                                    {# <input name="file_vc" type="file" class="form-control"> #}
                                </div>
                                <div class="hr-text hr-text-center hr-text-spaceless mt-3 mb-3">OR</div>
                                <div class="mb-3">
                                    {# <div class="form-label">Paste JSON-LD Content</div> #}
                                    {# {{ form.vc_document.label(class="form-label") }} #}
                                    {{ form.vc_text(class="form-control", placeholder="Paste your VC here", style="height: 280px;") }}
                                    {# <textarea class="form-control" name="text_vc" placeholder="Paste your VC here"
                                    data-bs-toggle="autosize"
                                    style="overflow: hidden; overflow-wrap: break-word; resize: none; text-align: start; height: 280px;"></textarea> #}
                                </div>
                            </div>
                            {{ form.submit(class="btn btn-primary w-100") }}
                    </div>
                    <div class="col-md-2 col-lg-2"></div>
                    {# <div class="col-md-4 col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Options</h3>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    {{ form.proof_type.label(class="form-label") }}
                                    {{ form.proof_type(class="form-select") }}
                                </div>
                                <div class="mb-3">
                                    {{ form.features.label(class="form-label") }}
                                    {% for subfield  in form.features %}
                                    <label class="form-check form-switch">
                                        {{ subfield(class="form-check-input") }}
                                        {{ subfield.label(class="form-check-label") }}
                                    </label>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="card-footer text-end">
                                {{ form.submit(class="btn btn-primary") }}
                            </div>
                        </div>
                    </div> #}
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}